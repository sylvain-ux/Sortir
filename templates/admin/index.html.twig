{% extends 'layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/select2.min.css') }}">
{% endblock %}
{% block title %}Admin - Tableau de bord{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row">
            <div class="col-12 p-5">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="user-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="true">Utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="trip-tab" data-toggle="tab" href="#trips" role="tab" aria-controls="trips" aria-selected="false">Sorties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="city-tab" data-toggle="tab" href="#cities" role="tab" aria-controls="trips" aria-selected="false">Villes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="location-tab" data-toggle="tab" href="#locations" role="tab" aria-controls="locations" aria-selected="false">Lieux</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="state-tab" data-toggle="tab" href="#states" role="tab" aria-controls="states" aria-selected="false">États</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="school-tab" data-toggle="tab" href="#schools" role="tab" aria-controls="schools" aria-selected="false">Écoles</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>


    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="border border-dark p-5">
                    <div class="tab-content" id="myTabContent">
                        {{ include('admin/inc/tab-user.html.twig') }}
                        {{ include('admin/inc/tab-trip.html.twig') }}
                        {{ include('admin/inc/tab-city.html.twig') }}
                        {{ include('admin/inc/tab-location.html.twig') }}
                        {{ include('admin/inc/tab-state.html.twig') }}
                        {{ include('admin/inc/tab-school.html.twig') }}

                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="{{ asset('assets/js/select2.full.min.js') }}"></script>
    <script>
        $(document).ready( function () {
            $('.table').DataTable();
            $('#trip_add_location').select2();
        });
    </script>
{% endblock %}
