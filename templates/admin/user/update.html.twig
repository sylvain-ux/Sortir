{% extends 'admin/admin-layout.html.twig' %}
{% form_theme userFormView 'bootstrap_4_layout.html.twig' %}
{% block title %}
    Modifier un utilisateur
{% endblock %}
{% block titre_page %}Modifier un utilisateur{% endblock %}
{% block breadcrumb %}Modifier un utilisateur{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-5">
            <div class="card">
                <div class="card-body">
                    {{ form(userFormView) }}
                    <hr>
                    <p class="text-right">
                        <a class="btn btn-sm btn-danger" onclick="confirmation()" href="{{ path('admin_user_delete',{ 'id': userFormView.vars.value.id }) }}" title="Supprimer"><i class="far fa-trash-alt"></i> </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
    {% endblock %}
    {% block javascripts %}
        <script>
            function confirmation(){
                var result = confirm("Vous souhaitez vraiment supprimer cet utilisateur ?");
                if(result){
                    // Delete logic goes here
                }
            }
        </script>
    {% endblock %}


