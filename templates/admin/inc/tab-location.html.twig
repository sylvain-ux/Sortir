<div class="tab-pane fade show" id="locations" role="tabpanel" aria-labelledby="location-tab">
    <h2 class="text-center">Lieux</h2>
    <p class="text-center"><a class="btn btn-success" href="{{ path('admin_location_add') }}">Ajouter un lieu</a></p>
    <table id="userTable" class="table table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Ville</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for location in allLocations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.name }}</td>
                <td>{{ location.street }}</td>
                <td>{{ location.city.name }}</td>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td><a href="{{ path('admin_location_update',{ 'id': location.id }) }}" class="btn btn-sm btn-outline-primary"><i class="fas fa-user-edit"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>