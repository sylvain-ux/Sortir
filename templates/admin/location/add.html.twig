{% block breadcrumb %}Ajouter un lieu{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-5">
            <div class="card">
                <div class="card-body">
                    {{ form(locationFormView) }}

