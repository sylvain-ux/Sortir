{% extends 'admin/admin-layout.html.twig' %}
{% form_theme locationFormView 'bootstrap_4_layout.html.twig' %}
{% block title %}
    Modifier un lieu
{% endblock %}
{% block titre_page %}Modifier un lieu{% endblock %}
{% block breadcrumb %}Modifier un lieu{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-5">
            <div class="card">
                <div class="card-body">
                    {{ form(locationFormView) }}
                    <p class="text-right">
                        <a class="btn btn-sm btn-danger" onclick="confirmation()" href="{{ path('admin_location_delete',{ 'id': locationFormView.vars.value.id }) }}" title="Supprimer"><i class="far fa-trash-alt"></i> </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/select2.full.min.js') }}"></script>
    <script>
        $(document).ready( function () {
            $('.select2').select2();
        });
    </script>
    <script>
        function confirmation(){
            var result = confirm("Vous souhaitez vraiment supprimer cet utilisateur ?");
            if(result){
                // Delete logic goes here
            }
        }
    </script>
{% endblock %}



