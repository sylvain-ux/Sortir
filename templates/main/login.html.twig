{% extends'layout.html.twig' %}

{% block title %}CONNEXION{% endblock %}



{% block body %}
<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
        <label for="email">Email </label>
        <input type="text" id="email" name="_username"  class="form-control" required>
        </div>

        <div class="form-group">
        <label for="password">Mot de passe </label>
        <input type="password" id="password" name="_password" class="form-control">
        </div>

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account"/>
        #}


{#        <input type="hidden" name="_target_path" value="{{ url('/home') }}"/>#}


        <p class="text-center"><button type="submit" class="btn btn-outline-primary">J'me connecte</button></p>
    </form>
        </div>
    </div>
</div>








{% endblock %}
