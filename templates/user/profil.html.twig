{% form_theme userFormView 'bootstrap_4_layout.html.twig' %}
{% form_theme uploadAvatarView 'bootstrap_4_layout.html.twig' %}

{% extends 'layout.html.twig' %}

{% block title %}PROFIL{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">
                    Mon profil
                </h3>

            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-5">

                <div class="row">
                    <div class="col-12 col-md-6 offset-md-3 py-5">

                        {% if app.user.getAvatarName() is not empty %}
                            <img  class="img-fluid" src="{{ asset('users/' ~ app.user.id ~ '/avatar/' ~ app.user.getAvatarName()) }}">
                        {% else %}
                            <img class="img-fluid" src="{{ asset('users/defaultAvatar/default-avatar.jpg') }}">

                        {% endif %}
                    </div>
                    <div class="col-12">
                        {{ form (uploadAvatarView) }}
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-12 py-3">

                        <a class="btn btn-info" href="{{path('user_password')  }}"> Changer votre mot de passe</a>

                    </div>
                </div>
            </div>
            <div class="col-12 col-md-5 offset-md-2">
                <br>
                {{ form (userFormView) }}
                <a class="btn btn-secondary" href="{{path('home')  }}" >Annuler</a>
            </div>
        </div>
    </div>












