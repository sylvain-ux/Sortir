{% extends 'layout.html.twig' %}
{% form_theme tripFormView 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/select2.min.css') }}">
{% endblock %}
{% block title %}
    Modifier une sortie
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <div class="bloc">
                    <h1 class="text-center">Modification d'une sortie</h1>
                    <hr>
                    {{ form(tripFormView) }}
                </div>
            </div>
            <div class="col-md-4">
                <a class="btn neumorphism-1" href="{{ path('trip_detail', {'id':trip.id}) }}">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/select2.full.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}


