{% extends 'layout.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="example-wrapper">
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="border border-dark p-5">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="users" role="tabpanel" aria-labelledby="user-tab">
                            <h2 class="text-center">Liste des sorties</h2>
                            <table id="userTable" class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom de la sortie</th>
                                    <th>Date de la sortie</th>
                                    <th>Clôture</th>
                                    <th>Inscrits/Places</th>
                                    <th>Etat</th>
                                    <th>Inscrit</th>
                                    <th>Organisateur</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for trip in allTrips %}

                                    <tr>
                                        <td>{{ trip.id }}</td>
                                        <td>{{ trip.name }}</td>
                                        <td>{{ trip.dateTimeStart|date("m/d/Y  g:ia") }}</td>
                                        <td>{{ trip.registDeadline|date("m/d/Y  g:ia") }}</td>
                                        <td>{{ trip.users|length }}{{ "/" }}{{ trip.nbRegistMax }}</td>
                                        <td> {{ trip.state.info }}</td>
                                        <td>
                                            {% for u in trip.users %}
                                                {% if u.id == app.user.id %}
                                                    ✅
                                                {% endif %}
                                            {% endfor %}

                                        </td>
                                        <td>{{ trip.user.name }}</td>
                                        <td>

                                            {# Si l'utilisateur est inscrit, il peut se désister #}
                                            {% if trip.isSubscribed(app.user) %}
                                                <a class="btn btn-success"
                                                   href="{{ path('trip_unsubscribe', {'id':trip.id}) }}">Se désister</a>
                                                {# Sinon si l'utilisateur n'est pas inscrit, il peut s'inscrire #}
                                            {% elseif trip.isNotSubscribed(app.user) %}
                                                <a class="btn btn-success"
                                                   href="{{ path('trip_inscription', {'id':trip.id}) }}">S'inscrire</a>
                                            {% endif %}

                                            {# Si la sortie est en cours, l'utilisateur peut afficher le détail #}

                                            {# Si je suis organisateur et que je crée ou j'ai créée une sortie, je peux la modifier ou la publier (sortie en mémo, uniquement visible pour l'organisteur) #}

                                            {# Si la sortie a passée la date d'inscription (sortie cloturée) et que la date de début est supérieur à la date actuelle, on peut juste afficher le détail sortie#}

                                            {# Si la date de fin d'activité est inférieure à la date actuelle, la sortie est affichée en passée (état = passée), pas de détails à afficher #}

                                        </td>


                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <p class="text-center"><a class="btn btn-success" href="{{ path('trip_create') }}">Créer une
                                    sortie</a></p>

                        </div>

                        <div class="tab-pane fade show" id="trips" role="tabpanel" aria-labelledby="trip-tab-tab">
                            <h2 class="text-center">Sorties</h2>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



{% endblock %}
